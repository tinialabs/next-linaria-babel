    "include": ["src", "evaluate-template-literal.ts", "index.ts", "tailwind-generate-css.ts", "tailwind-transform-jsx.ts", "tailwind-transform-tw.ts", "tailwind-transform-twx.ts", "types.ts", "evaluate-ast-node.ts", "babel-write-css.ts"],
    "exclude": ["node_modules"]
